<% translate(".list_items").each_with_index do |translation, index| %>
  <div data-i18n-key="examples.index.list_items">
    <% if content_for?("examples.index.list_items[#{index}]") %>
      <%= yield("examples.index.list_items[#{index}]") %>
    <% else %>
      <%= translation %>

      <%= render(
        partial: "admin/translations/edit_button",
        locals: { key: "examples.index.list_items", index: index },
      ) %>
    <% end %>
  </div>
<% end %>
