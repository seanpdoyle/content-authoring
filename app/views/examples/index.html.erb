<h1 data-i18n-key="examples.index.title">
  <% if content_for?("examples.index.title") %>
    <%= yield("examples.index.title") %>
  <% else %>
    <%= translate(".title") %>

    <%= render(
      partial: "admin/translations/edit_button",
      locals: { key: "examples.index.title" },
    ) %>
  <% end %>
</h1>

<div data-i18n-key="examples.index.hero_html">
  <% if content_for?("examples.index.hero_html") %>
    <%= yield("examples.index.hero_html") %>
  <% else %>
    <div class="trix-content">
      <%= translate(".hero_html") %>
    </div>

    <%= render(
      partial: "admin/translations/edit_button",
      locals: { key: "examples.index.hero_html" },
    ) %>
  <% end %>
</div>

