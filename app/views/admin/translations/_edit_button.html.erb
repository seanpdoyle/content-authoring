<%= link_to(
  edit_admin_fragment_translation_path(
    "value",
    key, (
      if local_assigns.key?(:index)
        { index: index }
      else
        {}
      end
    )
  ),
) do %>

  <%= translate(".button") %>
  <%= tag.span(
    translate(
      key,
      scope: [:translations, :keys],
      default: key.split(".").map(&:humanize).join(": "),
    ),
    class: "hide-visually",
  ) %>
<% end %>
