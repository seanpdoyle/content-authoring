<%= form_with(
  url: edit_admin_fragment_page_path(attribute, page),
  method: :get,
  html: { "data-controller": "fragment-form" },
) do |form| %>
  <%= form.button do %>
    <%= translate(".button") %>
    <%= tag.span(
      page.class.human_attribute_name(attribute),
      class: "hide-visually",
    ) %>
  <% end %>
<% end %>
